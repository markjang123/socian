<!DOCTYPE html>
<html>
  <head>
    <title>Socian</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script>
      window.image = "<%= image_url("socian-logo.png")%>"
    </script>
    <% if logged_in? %>
      <script>
        window.currentUser = 
        <%= render("api/users/show.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
